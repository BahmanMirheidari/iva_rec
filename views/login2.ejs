<% include partials/header.ejs %>
    <div class="table-wrapper col-sm-4 offset-sm-4"> 

       <div class="jumbotron d-flex align-items-center"> 
          <div class="col-sm-10 offset-sm-1"> 
            <a href="/auth/google"><img src="Images/btn_google_signin.png" class="google" title="Google signin" alt="Google signin"></a>   

            <h1><span class="fa fa-sign-in" ></span> Login</h1>
            <% if (typeof message !== "undefined" && message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- LOGIN FORM -->
            <form action="/auth" method="post" >  
                <div class="form-group"> 
                    <% if (typeof username !== "undefined" && username.length > 0) { %>
                        <input type="text" class="form-control" placeholder="Username" name="username" value=<%= username %> > 
                    <% } else { %>
                        <input type="text" class="form-control" placeholder="Username"  name="username">
                    <% }%>
                </div>
                <div class="form-group">   
                    <% if (typeof password !== "undefined" && password.length > 0) { %>
                        <input type="password" class="form-control" placeholder="Password" name="password" value=<%= password %> > 
                    <% } else { %>
                        <input type="password" class="form-control" placeholder="Password" name="password">
                    <% }%> 
                </div> 
                <button type="submit" class="btn btn-lg btn-primary"">login</button>
            </form> 
        </div> 
      </div>
    </div>
<% include partials/footer.ejs %>




 